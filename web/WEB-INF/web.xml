<web-app id="WebApp_ID">
	<display-name>oscar_mcmaster</display-name>
  <!-- Login filter -->
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>oscar.oscarSecurity.LoginFilter</filter-class>
  </filter>
<!-- plugin filter -->
  <filter>
	<filter-name>ComponentFilter</filter-name>
	<filter-class>
		org.caisi.comp.web.WebComponentFilter
	</filter-class>
  </filter>
  <filter>
    <filter-name>CRFilter</filter-name>
    <display-name>CRFilter</display-name>
    <filter-class>net.sf.cookierevolver.CRFilter</filter-class>
    <init-param>
     <param-name>cr.filter.ignore</param-name>
     <param-value>/login.do /images/* /lab/CMLlabUpload.do /lab/CA/ON/uploadComplete.jsp</param-value>
	</init-param>
	<!--
	<init-param><param-name>authStrategy</param-name><param-value>DATABASE</param-value></init-param>
	-->
		<init-param><param-name>cr.auth.method</param-name><param-value>CUSTOM</param-value></init-param>
		<init-param><param-name>cr.auth.loginURL</param-name><param-value>index.jsp</param-value></init-param>
		<init-param>
			<param-name>cr.policy.default</param-name>
			<param-value>REMOTE-ACCESS</param-value>
		</init-param>
		<init-param>
			<param-name>cr.rolesProvider</param-name>
			<param-value>oscar.oscarSecurity.CRHelper</param-value>
		</init-param>
		<init-param>
			<param-name>cr.config.provider</param-name>
			<param-value>oscar.oscarDB.OscarHibernateProperties</param-value>
		</init-param>
		<!-- Hibernate properties auto-propegate 
		 to the hibernate session-factory configuration
		 (all init-params that starts with 'hibernate')
		 -->
		<init-param><param-name>hibernate.connection.pool_size</param-name><param-value>10</param-value></init-param>
		<!--  <init-param><param-name>hibernate.hbm2ddl.auto</param-name><param-value>update</param-value></init-param>-->
		<init-param><param-name>hibernate.connection.autocommit</param-name><param-value>true</param-value></init-param>
	</filter>
	<filter-mapping>
		<filter-name>CRFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ComponentFilter</filter-name>
		<url-pattern>/mod/*</url-pattern>
	</filter-mapping>

  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <listener>
    <listener-class>oscar.login.Startup</listener-class>
  </listener>
  <listener>
	 <listener-class>
	  org.caisi.common.web.OscarDbPropertiesListener
	 </listener-class>
  </listener>

  <listener>
    <listener-class>
      org.caisi.common.web.CaisiSpringLoader
    </listener-class>
  </listener>

  <!-- Action Servlet Configuration -->
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
    <init-param>
      <param-name>debug</param-name>
      <param-value>2</param-value>
    </init-param>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/struts-config.xml</param-value>
      <!--param-value>/WEB-INF/struts-config-oscarMessenger.xml</param-value-->
    </init-param>
    <init-param>
      <param-name>application</param-name>
      <param-value>oscarResources</param-value>
      <!--param-value>oscar.oscarMessenger.oscarMessengerResources</param-value-->
    </init-param>
    <init-param>
      <param-name>detail</param-name>
      <param-value>2</param-value>
    </init-param>
    <init-param>
      <param-name>validate</param-name>
      <param-value>true</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <!-- Oscar servlets -->
  <!-- oscar documents -->
  
  <!-- Used in billing -->
  <servlet>
          <servlet-name>UploadDocument</servlet-name>
	  <servlet-class>oscar.DocumentMgtUploadServlet</servlet-class>
	  <load-on-startup>0</load-on-startup>
  </servlet>

  <!-- form pdf print -->
  <servlet>
          <servlet-name>pdfCreator</servlet-name>
          <servlet-class>oscar.form.pdfservlet.FrmPDFServlet</servlet-class>
          <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
	  <servlet-name>reportDownload</servlet-name>
	  <servlet-class>oscar.oscarReport.pageUtil.RptDownloadCSVServlet</servlet-class>
	  <load-on-startup>0</load-on-startup>
  </servlet>

  <servlet>
	  <servlet-name>OscarDownload</servlet-name>
	  <servlet-class>OscarDownload</servlet-class>
	  <load-on-startup>0</load-on-startup>
  </servlet>

  <servlet>
	  <servlet-name>Download</servlet-name>
	  <servlet-class>oscar.util.GenericDownload</servlet-class>
	  <load-on-startup>0</load-on-startup>
  </servlet>


  <servlet>
	  <servlet-name>BackupDownload</servlet-name>
	  <servlet-class>oscar.util.BackupDownload</servlet-class>
	  <load-on-startup>0</load-on-startup>
  </servlet>

  <servlet>
	  <servlet-name>UploadTeleplanServlet</servlet-name>
	  <servlet-class>oscar.oscarBilling.ca.bc.MSP.DocumentTeleplanReportUploadServlet</servlet-class>
	  <load-on-startup>0</load-on-startup>
  </servlet>

   <!-- oscar Report -->
  <servlet>
          <servlet-name>ScatterPlotChartServlet</servlet-name>
          <servlet-class>oscar.oscarEncounter.oscarMeasurements.pageUtil.ScatterPlotChartServlet</servlet-class>
  </servlet>

  <servlet>
          <servlet-name>DocumentUploadServlet</servlet-name>
          <servlet-class>oscar.DocumentUploadServlet</servlet-class>
          <load-on-startup>0</load-on-startup>
  </servlet>

  <!-- Action Servlet Mapping -->
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>

  <!-- oscar documents -->
  <servlet-mapping>
	  <servlet-name>UploadDocument</servlet-name>
	  <url-pattern>/servlet/oscar.DocumentMgtUploadServlet</url-pattern>
  </servlet-mapping>

<!-- Disabled because it's a security risk and because it's disabled by default
     in Tomcat 5.  Better practice to specify each servlet individually.
	<servlet-mapping>
        <servlet-name>invoker</servlet-name>
        <url-pattern>/servlet/*</url-pattern>
    </servlet-mapping> -->

  <servlet-mapping>
          <servlet-name>pdfCreator</servlet-name>
          <url-pattern>/form/createpdf</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
          <servlet-name>reportDownload</servlet-name>
          <url-pattern>/report/reportDownload</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
	  <servlet-name>OscarDownload</servlet-name>
	  <url-pattern>/servlet/OscarDownload</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
	  <servlet-name>Download</servlet-name>
	  <url-pattern>/Download</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
	  <servlet-name>BackupDownload</servlet-name>
	  <url-pattern>/servlet/BackupDownload</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
	  <servlet-name>UploadTeleplanServlet</servlet-name>
	  <url-pattern>/servlet/oscar.DocumentTeleplanReportUploadServlet</url-pattern>
  </servlet-mapping>

  <!--oscar Report -->
  <servlet-mapping>
          <servlet-name>ScatterPlotChartServlet</servlet-name>
          <url-pattern>/servlet/oscar.oscarEncounter.oscarMeasurements.pageUtil.ScatterPlotChartServlet</url-pattern>
  </servlet-mapping>
  <!--Used in billing -->
  <servlet-mapping>
          <servlet-name>DocumentUploadServlet</servlet-name>
          <url-pattern>/servlet/oscar.DocumentUploadServlet</url-pattern>
  </servlet-mapping>

  <!-- The Welcome File List -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
  </welcome-file-list>

  <!-- Struts Tag Library Descriptors -->
  <taglib>
    <taglib-uri>/WEB-INF/struts-bean.tld</taglib-uri>
    <taglib-location>/WEB-INF/struts-bean.tld</taglib-location>
  </taglib>
  <taglib>
    <taglib-uri>/WEB-INF/struts-html.tld</taglib-uri>
    <taglib-location>/WEB-INF/struts-html.tld</taglib-location>
  </taglib>
  <taglib>
    <taglib-uri>/WEB-INF/struts-logic.tld</taglib-uri>
    <taglib-location>/WEB-INF/struts-logic.tld</taglib-location>
  </taglib>
<!--  <taglib>
    <taglib-uri>http://jakarta.apache.org/taglibs/log-1.0</taglib-uri>
    <taglib-location>/WEB-INF/log.tld</taglib-location>
  </taglib>-->

</web-app>
