<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="org.oscarehr.PMmodule.model">
	<class name="IntakeNode" table="intake_node">
		<meta attribute="sync-DAO">false</meta>
		
		<id name="id" type="integer" column="intake_node_id">
			<generator class="native" />
		</id>
		
		<many-to-one name="type" class="IntakeNodeType"
			column="intake_node_type_id" not-null="true"
			lazy="false" />
		
		<many-to-one name="parent" class="IntakeNode"
			column="parent_intake_node_id" not-null="false"
			insert="false" update="false"/>

		<list name="children" cascade="save-update" inverse="false">
			<key column="parent_intake_node_id" not-null="false" />
			<list-index column="pos" />
			<one-to-many class="IntakeNode" />
		</list>
		
		<list name="labels" cascade="save-update" inverse="false" lazy="false">
			<key column="intake_node_id" not-null="true" />
			<list-index column="pos" />
			<one-to-many class="IntakeLabel" />
		</list>
		
		<set name="answers" inverse="true" sort="natural">
			<key column="intake_node_id" />
			<one-to-many class="IntakeAnswer" />
		</set>
		
		<set name="instances" inverse="true" sort="natural">
			<key column="intake_node_id" />
			<one-to-many class="IntakeInstance" />
		</set>
	</class>
</hibernate-mapping>